<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestApiWithoutMvvm.QuotesPage">
    <ContentPage.Content>
        <StackLayout>


            <ListView x:Name="LvQuotes">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding title}"  TextColor="Green" 
                      Detail="{Binding description}" DetailColor="PaleVioletRed"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>